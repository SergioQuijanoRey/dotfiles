! General Configuration for URxvt
!===============================================================================
! URxvt font
URxvt.font: xft:monospace:size=11

! Disabling scrollbar
URxvt.scrollBar: false

! Control keys support on VIM
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

! Transparency
! urxvt*transparent: true
! urxvt*shading: 100

! Copy/Paste with <Ctrl-Alt-c> / <Ctrl-Alt-V>
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.perl-ext-common: default, clipboards

! Mouse/Touchpad scrolling
URxvt.perl-ext-common:vtewheel

