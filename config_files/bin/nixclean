#!/usr/bin/env bash

# Command to clean nix store
# Could be an alias, but because this cleaning is so slow, we want to do some
# echo's of the process

echo ""
echo "‚ôªÔ∏è Started 'nix-env --delete-generations 7d' at $(date)"
nix-env --delete-generations 7d

echo ""
echo "‚ôªÔ∏è Started nix-store --gc at $(date)"
nix-store --gc

""
echo "‚ôªÔ∏è Started deleting gcroots at $(date)"
for link in /nix/var/nix/gcroots/auto/*
do
    echo "  üîó Removing link $link"
    sudo rm $(readlink "$link")
done

echo ""
echo "‚ôªÔ∏è Started nix-collect-garbage --delete-older-than 7d at $(date)"
nix-collect-garbage --delete-older-than 7d;

echo ""
echo "‚ôªÔ∏è Started nix-store --optimise at $(date)"
nix-store --optimise
