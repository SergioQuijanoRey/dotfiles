#!/bin/sh
xrandr --output eDP1 --primary --mode 1366x768 --pos 1920x0 --rotate normal --output DP1 --off --output HDMI1 --off --output HDMI2 --mode 1920x1080 --pos 0x0 --rotate normal --output VIRTUAL1 --off

# Reload system bar
reload_polybar_script="$HOME/.config/polybar/launcher"
$reload_polybar_script
