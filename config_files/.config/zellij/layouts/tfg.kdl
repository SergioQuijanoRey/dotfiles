layout {

    // Default tab template
    // All tabs defined in this layout are going to use this template, unless
    // we explicit use other template
    // Moreover, tabs created by the user with commands are going to use this
    // template
    default_tab_template {

        // Default zellij tab bar
        pane size=1 borderless=true {
            // plugin location="zellij:tab-bar"
            plugin location="zellij:compact-bar"
        }

        children


        // Helper status bar
        // We are not using it, but I left here in case I need it in the future
        // pane size=2 borderless=true {
        //     plugin location="zellij:status-bar"
        // }
    }

    tab name="pomodoro" {
        pane {
            command "pomodoro"
            args "50m" "Tomate un descanso ðŸ˜„"
            start_suspended true
        }
    }

    tab name="code" {
        pane {
            command "nix"
            args "develop" "--command" "nvim"
            cwd "/home/sergio/GitProjects/TFG/"
        }
    }

    tab name="ssh" {
        pane {
            command "ssh"
            args "ugr"
        }
    }
}
